<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/toolbar_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_smartsoil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/toolbar_icon"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_icon"
        app:layout_constraintStart_toEndOf="@id/toolbar_icon"
        android:layout_marginStart="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_title"
            android:textAppearance="@style/project_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_title2"
            android:textAppearance="@style/project_title2"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_icon"
        app:layout_constraintStart_toStartOf="@id/toolbar_icon"
        android:layout_marginTop="30dp"
        android:text="Welcome Back!"
        android:textAppearance="@style/login_welcome" >
    </TextView>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAppearance="@style/login_h2"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        android:text="Please login your credentials">
    </TextView>

    <!-- Email Input -->
    <EditText
        android:id="@+id/editTextMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:textAppearance="@style/login_input"
        android:textColorHint="@color/light_gray"
        android:textColor="@color/black_50"
        app:layout_constraintTop_toBottomOf="@id/tv_2"
        app:layout_constraintStart_toStartOf="@id/tv_2"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp"/>
    <ImageView
        android:id="@+id/iv_email"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_email2"
        android:elevation="4dp"
        app:tint="@color/black_50"
        app:layout_constraintTop_toTopOf="@id/editTextMobileNumber"
        app:layout_constraintBottom_toBottomOf="@id/editTextMobileNumber"
        app:layout_constraintStart_toEndOf="@id/editTextMobileNumber"
        android:layout_marginStart="-65dp">
    </ImageView>
    <androidx.cardview.widget.CardView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="11dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toTopOf="@id/editTextMobileNumber"
        app:layout_constraintBottom_toBottomOf="@id/editTextMobileNumber"
        app:layout_constraintStart_toEndOf="@id/editTextMobileNumber"
        android:layout_marginStart="-65dp">
    </androidx.cardview.widget.CardView>
    <!--=====================-->


    <!-- Password Input -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:textAppearance="@style/login_input"
        android:textColorHint="@color/light_gray"
        android:textColor="@color/black_50"
        app:layout_constraintStart_toStartOf="@id/editTextMobileNumber"
        app:layout_constraintTop_toBottomOf="@id/editTextMobileNumber"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:elevation="2dp"/>

    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_password"
        app:tint="@color/black_50"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="@id/editTextPassword"
        app:layout_constraintBottom_toBottomOf="@id/editTextPassword"
        app:layout_constraintStart_toEndOf="@id/editTextPassword"
        android:layout_marginStart="-95dp">
    </ImageView>
    <androidx.cardview.widget.CardView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="11dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toTopOf="@id/editTextPassword"
        app:layout_constraintBottom_toBottomOf="@id/editTextPassword"
        app:layout_constraintStart_toEndOf="@id/editTextPassword"
        android:layout_marginStart="-95dp">
    </androidx.cardview.widget.CardView>
<!--=====================-->


    <!-- Don't have an account? -->
    <TextView
        android:id="@+id/tv_log2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textAppearance="@style/login_h2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/tv_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="Click here"
        android:textAppearance="@style/login_h2"
        android:textColor="@color/main_blue"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        app:layout_constraintStart_toEndOf="@id/tv_log2"/>

    <!-- Sign In Button -->

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="30dp"
        android:clickable="true"
        android:focusable="true">
        <!-- Contents of the additional CardView -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sub_blue"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textAppearance="@style/sub_buttons"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_login"
                app:tint="@color/black_50"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Don't have an account? -->
    <TextView
        android:id="@+id/tv_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textAppearance="@style/login_h2"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSignIn"
        app:layout_constraintStart_toStartOf="@id/buttonSignIn"/>
    <!-- Sign Up Link -->
    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_log"
        android:text="Sign Up"
        android:textAppearance="@style/login_h2"
        android:textColor="@color/main_blue"
        app:layout_constraintStart_toEndOf="@id/tv_log"
        app:layout_constraintTop_toTopOf="@id/tv_log"
        android:layout_marginStart="5dp"
        android:textStyle="bold"/>

<!--GIFs-->
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/animated_sun"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/gif_1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_1"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/animated_trucker"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
