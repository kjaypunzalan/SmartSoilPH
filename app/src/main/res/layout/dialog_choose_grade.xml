<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/white"
            android:padding="30dp">

            <!--Title-->
            <TextView
                android:id="@+id/tv_grade_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select Available Grades"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/tv_grade_title"/>

            <!--Information-->
            <TextView
                android:id="@+id/tv_grade_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Please choose a grade from the options below."
                app:layout_constraintTop_toBottomOf="@id/tv_grade_title"
                app:layout_constraintStart_toStartOf="@id/tv_grade_title"
                app:layout_constraintEnd_toEndOf="@id/tv_grade_title"
                android:textAppearance="@style/tv_grade_info" />

            <View
                android:id="@+id/hl_1"
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/tv_grade_info"
                app:layout_constraintStart_toStartOf="@id/tv_grade_info"
                app:layout_constraintEnd_toEndOf="@id/tv_grade_info"/>

            <!--NPK Grade Selection-->

            <!--Grid Layout1-->
            <GridLayout
                android:id="@+id/grid_layout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/hl_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:columnCount="2">

                <RadioButton
                    android:id="@+id/gs_1"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_1"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>

                <RadioButton
                    android:id="@+id/gs_2"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_2"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>

                <RadioButton
                    android:id="@+id/gs_3"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_3"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>

                <RadioButton
                    android:id="@+id/gs_4"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_4"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>

                <RadioButton
                    android:id="@+id/gs_5"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_5"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>

                <RadioButton
                    android:id="@+id/gs_6"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_6"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>
            </GridLayout>

            <View
                android:id="@+id/hl_2"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/grid_layout1"
                app:layout_constraintStart_toStartOf="@id/grid_layout1"
                app:layout_constraintEnd_toEndOf="@id/grid_layout1"/>

            <!--Grid Layout2-->
            <GridLayout
                android:id="@+id/grid_layout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/grid_layout1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:columnCount="2">

                <RadioButton
                    android:id="@+id/gs_7"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_7"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>

                <RadioButton
                    android:id="@+id/gs_8"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_8"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>

                <RadioButton
                    android:id="@+id/gs_9"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_9"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>

                <RadioButton
                    android:id="@+id/gs_10"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_10"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>

                <RadioButton
                    android:id="@+id/gs_11"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_11"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>

                <RadioButton
                    android:id="@+id/gs_12"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/rb_bg_template"
                    android:button="@null"
                    android:drawableStart="@drawable/rb_template"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/gs_12"
                    android:textAppearance="@style/gs_item"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/rb_color_selection"/>
            </GridLayout>

            <View
                android:id="@+id/hl_4"
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/grid_layout2"
                app:layout_constraintStart_toStartOf="@id/grid_layout2"
                app:layout_constraintEnd_toEndOf="@id/grid_layout2"/>

            <!-- Button styled as a CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:layout_constraintTop_toBottomOf="@id/hl_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp">
                <!-- Contents of the additional CardView -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/main_blue"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_check"
                        app:tint="@color/white"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_apply"
                        android:textAppearance="@style/sub_buttons"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Close Button-->
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            app:tint="#80000000"
            android:layout_gravity="right"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>