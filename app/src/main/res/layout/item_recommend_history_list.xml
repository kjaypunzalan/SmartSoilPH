<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/date_time"
        android:textAppearance="@style/date_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp">
    </TextView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:src="@drawable/icon_identifier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_date_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_date_time">
    </ImageView>

    <HorizontalScrollView
        android:id="@+id/hsv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date_time"
        android:scrollbarThumbHorizontal="@drawable/custom_scroll_bar_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fadeScrollbars="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">


                    <ImageView
                        android:id="@+id/iv_fertilizer"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_fertilizer"
                        app:tint="#80000000"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <!--NPK Amount-->
                        <TextView
                            android:id="@+id/tv_fertilizer_amount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fertilizer_value"
                            android:textAppearance="@style/recommendation_value"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="60dp"
                            android:layout_gravity="center"
                            android:text="@string/fertilizer_info1"
                            android:textAppearance="@style/recommendation_info"
                            android:textAlignment="center"/>

                    </LinearLayout>
                <!-- Vertical Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/iv_fertilizer"
                        app:layout_constraintTop_toTopOf="@id/cl_1"
                        app:layout_constraintBottom_toBottomOf="@id/cl_1"
                        android:layout_margin="10dp">

                        <!--NPK Amount-->
                        <TextView
                            android:id="@+id/tv_fertilizer_amount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fertilizer_value"
                            android:textAppearance="@style/recommendation_value"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="60dp"
                            android:layout_gravity="center"
                            android:text="@string/fertilizer_info2"
                            android:textAppearance="@style/recommendation_info"
                            android:textAlignment="center"/>

                    </LinearLayout>
                <!-- Vertical Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"/>
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iv_fertilizer"
                    app:layout_constraintTop_toTopOf="@id/cl_1"
                    app:layout_constraintBottom_toBottomOf="@id/cl_1"
                    android:layout_margin="10dp">

                    <!--NPK Amount-->
                    <TextView
                        android:id="@+id/tv_fertilizer_amount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fertilizer_value"
                        android:textAppearance="@style/recommendation_value"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="60dp"
                        android:layout_gravity="center"
                        android:text="@string/fertilizer_info3"
                        android:textAppearance="@style/recommendation_info"
                        android:textAlignment="center"/>

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/hd_2"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_scroll_bar_divider"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_npk"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_npk"
                    app:tint="#80000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cl_3"
                    app:layout_constraintBottom_toBottomOf="@id/cl_3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iv_npk"
                    app:layout_constraintTop_toTopOf="@id/cl_3"
                    app:layout_constraintBottom_toBottomOf="@id/cl_3"
                    android:layout_margin="10dp">

                    <!--NPK Amount-->
                    <TextView
                        android:id="@+id/tv_npk_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/npk_value"
                        android:textAppearance="@style/recommendation_value"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="60dp"
                        android:layout_gravity="center"
                        android:text="@string/npk_info"
                        android:textAppearance="@style/recommendation_info"
                        android:textAlignment="center"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </HorizontalScrollView>

    <View
        android:id="@+id/hd_1"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_scroll_bar_divider"
        app:layout_constraintTop_toBottomOf="@+id/hsv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>