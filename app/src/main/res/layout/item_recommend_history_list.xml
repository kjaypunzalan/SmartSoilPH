<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/date_time"
        android:textAppearance="@style/date_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp">
    </TextView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:src="@drawable/icon_identifier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_date_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_date_time">
    </ImageView>

    <HorizontalScrollView
        android:id="@+id/hsv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date_time"
        android:scrollbarThumbHorizontal="@drawable/custom_scroll_bar_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fadeScrollbars="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_rh_1"
                android:textAppearance="@style/recommendation_info"
                android:layout_marginTop="5dp"
                android:textSize="10sp">
            </TextView>

<!--Crop & Soil info-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/iv_crop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/icon_crop_type"
                    app:tint="#80000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iv_crop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp">

                    <!--Crop Name-->
                    <TextView
                        android:id="@+id/tv_selected_crop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="140dp"
                        android:textAlignment="center"
                        android:text="@string/selected_crop"
                        android:textAppearance="@style/recommendation_value"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="100dp"
                        android:layout_gravity="center"
                        android:text="@string/selected_crop_desc"
                        android:textAppearance="@style/recommendation_info"
                        android:textAlignment="center"/>

                </LinearLayout>

                <!-- Vertical Divider -->
                <View
                    android:id="@+id/vd_1"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ll_2"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:id="@+id/iv_soil"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_soil_type"
                    app:tint="#80000000"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/vd_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iv_soil"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp">

                    <!--Crop Name-->
                    <TextView
                        android:id="@+id/tv_selected_soil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="140dp"
                        android:textAlignment="center"
                        android:text="@string/selected_soil"
                        android:textAppearance="@style/recommendation_value"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="100dp"
                        android:layout_gravity="center"
                        android:text="@string/selected_soil_desc"
                        android:textAppearance="@style/recommendation_info"
                        android:textAlignment="center"/>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/hd_3"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_scroll_bar_divider"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_rh_2"
                android:textAppearance="@style/recommendation_info"
                android:layout_marginTop="5dp"
                android:textSize="10sp"/>

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="5dp">


                    <ImageView
                        android:id="@+id/iv_fertilizer"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="2dp"
                        android:src="@drawable/icon_fertilizer"
                        app:tint="#80000000"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <!--NPK Amount-->
                        <TextView
                            android:id="@+id/tv_fertilizer_amount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fertilizer_value"
                            android:textAppearance="@style/recommendation_value"
                            android:layout_gravity="center" />
                        <TextView
                            android:id="@+id/tv_fertilizer_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="90dp"
                            android:layout_gravity="center"
                            android:text="@string/fertilizer_info1"
                            android:textAppearance="@style/recommendation_info"
                            android:textAlignment="center"/>

                    </LinearLayout>
                <!-- Vertical Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/iv_fertilizer"
                        app:layout_constraintTop_toTopOf="@id/cl_1"
                        app:layout_constraintBottom_toBottomOf="@id/cl_1"
                        android:layout_margin="10dp">

                        <!--NPK Amount-->
                        <TextView
                            android:id="@+id/tv_fertilizer_amount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fertilizer_value"
                            android:textAppearance="@style/recommendation_value"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tv_fertilizer_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="90dp"
                            android:layout_gravity="center"
                            android:text="@string/fertilizer_info2"
                            android:textAppearance="@style/recommendation_info"
                            android:textAlignment="center"/>

                    </LinearLayout>
                <!-- Vertical Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"/>
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iv_fertilizer"
                    app:layout_constraintTop_toTopOf="@id/cl_1"
                    app:layout_constraintBottom_toBottomOf="@id/cl_1"
                    android:layout_margin="10dp">

                    <!--NPK Amount-->
                    <TextView
                        android:id="@+id/tv_fertilizer_amount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fertilizer_value"
                        android:textAppearance="@style/recommendation_value"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tv_fertilizer_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="90dp"
                        android:layout_gravity="center"
                        android:text="@string/fertilizer_info3"
                        android:textAppearance="@style/recommendation_info"
                        android:textAlignment="center"/>

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/hd_2"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_scroll_bar_divider"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_rh_3"
                android:textAppearance="@style/recommendation_info"
                android:layout_marginTop="5dp"
                android:textSize="10sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/iv_npk"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_npk"
                    android:padding="5dp"
                    app:tint="#80000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cl_3"
                    app:layout_constraintBottom_toBottomOf="@id/cl_3"/>

                <LinearLayout
                    android:id="@+id/ll_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iv_npk"
                    app:layout_constraintTop_toTopOf="@id/cl_3"
                    app:layout_constraintBottom_toBottomOf="@id/cl_3"
                    android:layout_margin="10dp">

                    <!--NPK Amount-->
                    <TextView
                        android:id="@+id/tv_npk_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/npk_value"
                        android:textAppearance="@style/recommendation_value"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="80dp"
                        android:layout_gravity="center"
                        android:text="@string/npk_info"
                        android:textAppearance="@style/recommendation_info"
                        android:textAlignment="center"/>

                </LinearLayout>

                <!-- Vertical Divider -->
                <View
                    android:id="@+id/vd_2"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ll_4"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:id="@+id/iv_phlevel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_ph_amount"
                    app:tint="#80000000"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/vd_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/ll_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iv_phlevel"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp">

                    <!--Crop Name-->
                    <TextView
                        android:id="@+id/tv_ph_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="140dp"
                        android:textAlignment="center"
                        android:text="@string/phlevel_amount"
                        android:textAppearance="@style/recommendation_value"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="100dp"
                        android:layout_gravity="center"
                        android:text="@string/phlevel_desc"
                        android:textAppearance="@style/recommendation_info"
                        android:textAlignment="center"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </HorizontalScrollView>

    <View
        android:id="@+id/hd_1"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_scroll_bar_divider"
        app:layout_constraintTop_toBottomOf="@+id/hsv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>