<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/white">

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/date_time"
        android:textAppearance="@style/date_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:src="@drawable/icon_identifier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_date_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_date_time">
    </ImageView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_date_time"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_rh_1"
                android:textAppearance="@style/recommendation_info"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_crop"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="6dp"
                    android:src="@drawable/icon_crop_type"
                    app:tint="#80000000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="5dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_crop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/tv_selected_crop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="80dp"
                        android:textAlignment="center"
                        android:text="@string/selected_crop"
                        android:textAppearance="@style/recommendation_value"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="60dp"
                        android:text="@string/selected_crop_desc"
                        android:textAppearance="@style/recommendation_info"
                        app:layout_constraintTop_toBottomOf="@id/tv_selected_crop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/vd_1"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/main_blue"
                app:layout_constraintTop_toTopOf="@id/cl_1"
                app:layout_constraintBottom_toBottomOf="@id/cl_1"
                app:layout_constraintStart_toEndOf="@id/cl_1"
                android:layout_marginStart="10dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/vd_1"
                app:layout_constraintTop_toTopOf="@id/vd_1"
                app:layout_constraintBottom_toBottomOf="@id/vd_1"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/iv_soil"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_soil_type"
                    app:tint="#80000000"
                    android:padding="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_soil"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/tv_selected_soil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="80dp"
                        android:textAlignment="center"
                        android:text="Clay"
                        android:textAppearance="@style/recommendation_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/tv_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="60dp"
                        android:textAlignment="center"
                        android:text="@string/selected_soil_desc"
                        android:textAppearance="@style/recommendation_info"
                        app:layout_constraintTop_toBottomOf="@+id/tv_selected_soil"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/vd_2"
            android:layout_width="1dp"
            android:layout_height="220dp"
            android:layout_marginStart="8dp"
            android:background="@color/main_blue"
            app:layout_constraintStart_toEndOf="@id/cl_sub"
            app:layout_constraintTop_toTopOf="@id/cl_main"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_sub3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/vd_2"
            app:layout_constraintTop_toTopOf="@id/cl_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_rh_3"
                android:textAppearance="@style/recommendation_info"
                android:maxWidth="70dp"
                android:textSize="10sp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_npk"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/icon_npk"
                    app:tint="#80000000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <TextView
                    android:id="@+id/tv_npk_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/npk_value"
                    android:textAppearance="@style/recommendation_value"
                    android:maxWidth="85dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_npk"
                    app:layout_constraintStart_toStartOf="@id/iv_npk"
                    app:layout_constraintEnd_toEndOf="@id/iv_npk"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="70dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_npk_amount"
                    app:layout_constraintStart_toStartOf="@id/tv_npk_amount"
                    app:layout_constraintEnd_toEndOf="@id/tv_npk_amount"
                    android:text="@string/npk_info"
                    android:textAppearance="@style/recommendation_info"
                    android:textAlignment="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/vd_3"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:background="@color/main_blue"
                app:layout_constraintTop_toBottomOf="@id/cl_3"
                app:layout_constraintStart_toStartOf="@id/cl_3"
                app:layout_constraintEnd_toEndOf="@id/cl_3"
                android:layout_marginTop="10dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/vd_3"
                app:layout_constraintStart_toStartOf="@id/vd_3"
                app:layout_constraintEnd_toEndOf="@id/vd_3"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_phlevel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_ph_amount"
                    app:tint="#80000000"
                    android:padding="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/tv_ph_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="85dp"
                    android:textAlignment="center"
                    android:text="@string/phlevel_amount"
                    android:textAppearance="@style/recommendation_value"
                    app:layout_constraintTop_toBottomOf="@id/iv_phlevel"
                    app:layout_constraintStart_toStartOf="@id/iv_phlevel"
                    app:layout_constraintEnd_toEndOf="@id/iv_phlevel"/>
                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="70dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_ph_amount"
                    app:layout_constraintStart_toStartOf="@id/tv_ph_amount"
                    app:layout_constraintEnd_toEndOf="@id/tv_ph_amount"
                    android:text="@string/phlevel_desc"
                    android:textAppearance="@style/recommendation_info"
                    android:textAlignment="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/vd_4"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/main_blue"
            app:layout_constraintTop_toBottomOf="@id/cl_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/vd_2"
            android:layout_marginTop="10dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vd_4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp">

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_rh_2"
                android:textAppearance="@style/recommendation_info"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_8"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/iv_fertilizer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="3dp"
                        android:src="@drawable/icon_fertilizer1"
                        app:tint="#80000000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/tv_fertilizer_name1"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tv_fertilizer_amount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fertilizer_value"
                        android:textAppearance="@style/recommendation_value"
                        app:layout_constraintTop_toBottomOf="@id/iv_fertilizer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/tv_fertilizer_name1"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/tv_fertilizer_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="70dp"
                        android:text="@string/fertilizer_info1"
                        android:textAppearance="@style/recommendation_info"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/tv_fertilizer_amount1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:id="@+id/vd_5"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="@color/main_blue"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cl_4"
                    android:layout_marginStart="10dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/vd_5"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:id="@+id/iv_fertilizer2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="3dp"
                        android:src="@drawable/icon_fertilizer2"
                        app:tint="#80000000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tv_fertilizer_amount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fertilizer_value"
                        android:textAppearance="@style/recommendation_value"
                        app:layout_constraintTop_toBottomOf="@id/iv_fertilizer2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/tv_fertilizer_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="70dp"
                        android:text="@string/fertilizer_info2"
                        android:textAppearance="@style/recommendation_info"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/tv_fertilizer_amount2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:id="@+id/vd_6"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="@color/main_blue"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cl_5"
                    android:layout_marginStart="10dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="@id/vd_6"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_fertilizer3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="3dp"
                        android:src="@drawable/icon_fertilizer3"
                        app:tint="#80000000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/tv_fertilizer_amount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fertilizer_value"
                        android:textAppearance="@style/recommendation_value"
                        app:layout_constraintTop_toBottomOf="@id/iv_fertilizer3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/tv_fertilizer_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="70dp"
                        android:text="@string/fertilizer_info3"
                        android:textAppearance="@style/recommendation_info"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/tv_fertilizer_amount3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>