<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="3dp">

<item>
    <shape
        android:shape="oval"
        android:useLevel="false">
        <stroke
            android:color="@color/main_blue"
            android:width="1.5dp"/>
        <size android:width="18dp"
            android:height="18dp"/>
    </shape>
</item>

    <item
        android:top="1.5dp"
        android:bottom="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid
                android:color="@color/white"/>
        </shape>
    </item>

    <item
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid
                android:color="@color/main_blue"/>
        </shape>
    </item>

</layer-list>